VERSION = "0.13.0"
STAGE = ""
RELEASE_DATE = "2007-11-24"
SVN_REVISION = proc {
                 vers = `svnversion`
                 rev = $?.success? ? vers.strip : 'unknown'
                 if rev == 'exported' 
                   ma = /\$Revision:\s*(\d+)\s*\$/.match("$Revision$")
                   rev = ma ? ma[1] : 'unknown'
                 end
                 rev
               }.call
