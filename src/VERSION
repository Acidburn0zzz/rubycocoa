VERSION = "1.0.3"
STAGE = ""
RELEASE_DATE = "2012-08-26"
SVN_REVISION = proc {
                 vers = `svnversion`
                 rev = $?.success? ? vers.strip : 'unknown'
                 if rev == 'exported' 
                   ma = /\$Revision:\s*(\d+)\s*\$/.match("$Revision$")
                   rev = ma ? ma[1] : 'unknown'
                 end
                 rev
               }.call
