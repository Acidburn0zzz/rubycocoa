VERSION = "0.9.0"
STAGE = "apple-unstable"
RELEASE_DATE = "2006-12-23"
SVN_REVISION = proc {
                 vers = `svnversion`
                 rev = $?.success? ? vers.strip : 'unknown'
                 if rev == 'exported' 
                   ma = /\$Revision:\s*(\d+)\s*\$/.match("$Revision$")
                   rev = ma ? ma[1] : 'unknown'
                 end
                 rev
               }.call
